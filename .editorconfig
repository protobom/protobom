root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 4

[*.{code-snippets,json,proto,yaml,yml}]
indent_size = 2

[*.{ansi,md,txt}]
insert_final_newline = false

[*.sh]
keep_padding = true
space_redirects = true
switch_case_indent = true
